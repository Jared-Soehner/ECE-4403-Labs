public class Demo {
    public static void main(String[] args) {
        // Create some stocks
        Stock Tesla = new Stock("TES", 59.32f);
        Stock GME = new Stock("GME", 999.32f);

        // Create StatusBar and StockListView objects
        StatusBar statusBar = new StatusBar();
        StockListView stockListView = new StockListView();

        // Add stocks to the views
        statusBar.addStock(Tesla);
        statusBar.addStock(GME);

        stockListView.addStock(Tesla);
        stockListView.addStock(GME);

        // Change the price of a stock and observe the views update
        Tesla.setPrice(323.32f);
    }
}
